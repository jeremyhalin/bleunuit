<html lang="{{@site.lang}}" class="bg-gray-900 text-gray-100">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{meta_title}}</title>
    <link rel="stylesheet" type="text/css" href="{{asset "built/screen.css"}}" />
    {{ghost_head}}
</head>
<body>
    <header class="flex flex-wrap w-full max-w-screen-sm mx-auto mb-16 items-center justify-center  p-2 lg:p-4 sm:justify-between">
        <a href="{{@site.url}}" title="{{t "Go to home page"}}"><h1 class="font-bold">{{@site.title}}</h1></a>
        {{navigation}}
    </header>

    <div class="w-full max-w-screen-sm mx-auto mb-8 p-2 lg:p-4">
        {{{body}}}
    </div>

    <footer class="max-w-screen-sm mx-auto p-2 lg:p-4">
        <hr class="opacity-25">
        <p>{{@site.title}} - {{@site.description}}</p>
    </footer>
    {{ghost_foot}}
</body>
</html>